<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Консольный аппендер -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}][%thread][%level][%logger{36}]: %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Файловый аппендер с ротацией -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>logs/backtester.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <!-- Ротация логов каждый день -->
            <fileNamePattern>logs/backtester-%d{yyyy-MM-dd}.log</fileNamePattern>
            <!-- Хранить файлы 30 дней -->
            <maxHistory>30</maxHistory>
            <!-- Максимальный размер хранимых файлов (100MB) -->
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>[%d{yyyy-MM-dd HH:mm:ss}][%thread][%level][%logger{36}]: %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Уровень логирования -->
    <root level="TRACE">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
    </root>

    <logger name="org.springframework" level="WARN"/>
    <logger name="org.ta4j" level="WARN"/>
    <logger name="com.binance.connector" level="WARN"/>

</configuration>